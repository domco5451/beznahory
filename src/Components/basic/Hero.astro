---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const allPosts = await getCollection("blog");
console.log(allPosts);
---

<div class="swiper-container">
  <div class="swiper">
    <div class="swiper-wrapper">
      {
        allPosts.map((post: any, i: number) => (
          <div class="swiper-slide">
            <div class="slide-content-text">
              <h2 class="more-title">Prečítajte si naše blogové príspevky!</h2>
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-description">{post.data.description}</p>
              <div class="post-links">
                <a class="post-link" href={`/blog/${post.slug}`}>
                  Čítať ďalej &#8594
                </a>
                <a class="post-link-blog" href={`/blog`}>
                  Všetky príspevky
                </a>
              </div>
            </div>
            <Image
              class="hero-image"
              src={post.data.thumbnail}
              alt={post.data.thumbnailAlt}
              loading={i > 0 ? "lazy" : "eager"}
            />
          </div>
        ))
      }
    </div>
    <div class="swiper-pagination"></div>
  </div>
  <Icon class="swiper-button-prev" name="left-arrow" />
  <Icon class="swiper-button-next" name="right-arrow" />
</div>
<style>
  :root {
    --swiper-pagination-color: var(--swiper-theme-color);
    --swiper-pagination-bullet-size: 8px;
    --swiper-pagination-bullet-width: 15px;
    --swiper-pagination-bullet-height: 15px;
    --swiper-pagination-bullet-inactive-color: #000;
    --swiper-pagination-bullet-inactive-opacity: 0.2;
    --swiper-pagination-bullet-opacity: 1;
    --swiper-pagination-bullet-horizontal-gap: 4px;
    --swiper-pagination-bullet-vertical-gap: 6px;
  }
  .swiper-container {
    position: relative;
    width: 100%;
    height: 100%;
    margin: auto;
    background-image: url("../../icons/pozadieAbout.svg");
    background-size: cover;
  }
  .swiper {
    max-width: 1500px;
  }
  .swiper-slide {
    display: flex;
    gap: 50px;
    justify-content: space-around;
    padding-inline: 20px;
    padding-block: 100px;
  }
  .slide-content-text {
    display: flex;
    flex-direction: column;
  }
  .hero-image {
    width: 800px;
    height: 350px;
    object-fit: cover;
    border-radius: 20px;
    box-shadow: -30px 30px 10px rgba(0, 0, 0, 0.1);
  }
  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    margin-inline: 30px;
    color: rgb(117, 117, 117);
    width: 70px;
    height: auto;
  }
  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    color: black;
  }

  .swiper-pagination-fraction,
  .swiper-pagination-custom,
  .swiper-horizontal > .swiper-pagination-bullets,
  .swiper-pagination-bullets.swiper-pagination-horizontal {
    bottom: var(--swiper-pagination-bottom, 25px);
    top: var(--swiper-pagination-top, auto);
    width: 100%;
  }
  .post-title {
    font-size: 2.8rem;
    color: var(--text-primary);
    margin-block-end: 10px;
    font-weight: bolder;
  }
  .more-title {
    font-size: 1.3rem;
    color: black;
    font-weight: 400;
  }
  .post-description {
    line-height: 2rem;
  }
  .post-link {
    color: white;
    background: black;
    padding: 12px 23px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
  }
  .post-link:hover {
    background: var(--text-primary);
    color: white;
  }
  .post-link-blog {
    position: relative;
    color: black;
    font-size: 1.2rem;
    bottom: 0;
    right: left;
  }
  .post-links {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    align-items: center;
    justify-content: space-between;
  }
  .post-link-blog::after {
    content: " ";
    position: absolute;
    width: 100%;
    height: 2px;
    left: 0;
    bottom: -2px;
    background: black;
    transition: all 0.3s ease-in-out;
  }
  .post-link-blog:hover::after {
    width: 0;
  }
  .post-link-blog:hover {
    color: var(--text-primary);
  }
</style>
<script src="../../scripts/sliderHero.js"></script>
