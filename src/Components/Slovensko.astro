    <circle class="Trnavský" cx="176.3" cy="308.4" id="SKTA"> </circle>
    <circle class="Trenciansky" cx="267" cy="196.3" id="SKTC"> </circle>
    <circle class="Banskobystrický" cx="473.4" cy="273" id="SKBC"> </circle>
    <circle class="Nitriansky" cx="269" cy="380.9" id="SKNI"> </circle>
  </g>
</svg>
<style>
  svg {
    width: 100%;
    max-width: 800px;
    height: auto;
    overflow: visible;
  }

  .region-path {
    transition: all 0.3s ease;
    cursor: pointer;
    transform-origin: center;
    transform-box: fill-box;
  }

  .region-path:hover {
    fill: #4a7c59;
    stroke-width: 3;
    transform: scale(1.03);
    filter: drop-shadow(1px 1px 10px rgba(0, 0, 0, 0.4));
  }
  g text {
    opacity: 0;
    transition: opacity 0.8s ease;
  }
  g:hover text {
    opacity: 1;
    text-shadow: 1px 1px 10px black;
  }
</style>
