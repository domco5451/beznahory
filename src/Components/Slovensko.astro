<svg
  fill="#6f9c76"
  stroke="#ffffff"
  stroke-linecap="round"
  stroke-linejoin="round"
  stroke-width=".5"
  version="1.2"
  viewBox="0 0 1000 492"
  xmlns="http://www.w3.org/2000/svg"
>
  <g class="presov">
    <a style="fill: #6f9c76;" href="/" aria-label="Prešovský kraj">
      <Presov />
    </a>        
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="750"
      y="150"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Prešovský</text
    >
  </g>
  <g class="kosice">
    <a style="fill: rgb(255, 86, 86);" href="/" aria-label="Košický kraj">
      <Kosice />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="720"
      y="250"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Košický</text
    >
  </g>
  <g class="bratislava">
    <a style="fill: #bfa900;" href="/" aria-label="Bratislavský kraj">
      <Bratislava />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="100"
      y="331"
      font-family="Arial"
      font-size="15px"
      stroke="none"
      fill="white">Bratislavský</text
    >
  </g>
  <g class="trnava">
    <a style="fill: #f7b267;" href="/" aria-label="Trnavský kraj">
      <Trnava />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="180"
      y="310"
      font-family="Arial"
      font-size="15px"
      stroke="none"
      fill="white">Trnavský</text
    >
  </g>
  <g class="trencin">
    <a style="fill: #b7c0ee;" href="/" aria-label="Trenčiansky kraj">
      <Trencin />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="270"
      y="200"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Trenčiansky</text
    >
  </g>
  <g class="banska-bystrica">
    <a style="fill: #e5989b;" href="/" aria-label="Banskobystrický kraj">
      <BanskaBystrica />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="470"
      y="275"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Banskobystrický</text
    >
  </g>
  <g class="nitra">
    <a style="fill: #b5ead7;" href="/" aria-label="Nitriansky kraj">
      <Nitra />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="270"
      y="385"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Nitriansky</text
    >
  </g>
  <g class="zilina">
    <a style="fill: #57cc99;" href="/" aria-label="Žilinský kraj">
      <Zilina />
    </a>
    <text
      dominant-baseline="middle"
      text-anchor="middle"
      x="415"
      y="140"
      font-family="Arial"
      font-size="20px"
      stroke="none"
      fill="white">Žilinský</text
    >
  </g>
  <g id="label_points">
    <circle class="Žilinský" cx="415.4" cy="135.4" id="SKZI"> </circle>
    <circle class="Prešov" cx="742.9" cy="134.5" id="SKPV"> </circle>
    <circle class="Košický" cx="717.7" cy="240.8" id="SKKI"> </circle>
