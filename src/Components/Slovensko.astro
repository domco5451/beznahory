---
import Presov from "./paths/Presov.astro";
import Kosice from "./paths/Kosice.astro";
import Bratislava from "./paths/Bratislava.astro";
import Trnava from "./paths/Trnava.astro";
import Trencin from "./paths/Trencin.astro";
