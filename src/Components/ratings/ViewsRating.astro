---
const { frontmatter } = Astro.props;
import { Icon } from "Astro-icon/components";

// to-do: vymeniÅ¥ .views za props

const score = frontmatter.ratings.views;
const stars = Array.from({ length: 5 }, (_, i) => {
  const position = i + 1;
  if (score >= position) return "star-filled";
  if (score >= position - 0.5) return "star-half-filled";
  return "star";
});
---
{stars.map((type) => <Icon name={type} size={30} />)}
