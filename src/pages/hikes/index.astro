---
import PageLayout from "../../layouts/PageLayout.astro";
import Slovensko from "../../Components/Slovensko.astro";
---

<PageLayout title="TÃºry">
  <div class="mapa-container">
    <h1>Kliknite na mapu!</h1>
    <div class="mapa">
      <Slovensko />
    </div>
  </div>
</PageLayout>

<style>
  .mapa {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .mapa-container {
    text-align: center;
    margin-block-start: 20px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    
    const svg = document.querySelector(".mapa svg");
    
    if (!svg) {
      console.error("SVG element not found!");
      return;
    }

    const regions = svg.querySelectorAll("g[class]");

    regions.forEach(region => {
      
      region.classList.add("region-path");

      region.addEventListener("mouseenter", function () {
      svg.appendChild(region);
    });
  });
});
</script>
