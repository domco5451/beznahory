---
import { Icon } from "astro-icon/components";

const regions = [
  {
    name: "Všetky túry",
    color: "#000000",
    href: "/hikes",
    description: "Zobraziť všetky túry",
  },
  {
    name: "Bratislavský",
    color: "#bfa900",
    href: "/hikes/bratislavsky-kraj",
    description: "Túry pre Bratislavský kraj",
  },
  {
    name: "Trenčiansky",
    color: "#b7c0ee",
    href: "/hikes/trenciansky-kraj",
    description: "Túry pre Trenčiansky kraj",
  },
  {
    name: "Košický",
    color: "rgb(255, 86, 86)",
    href: "/hikes/kosicky-kraj",
    description: "Túry pre Košický kraj",
  },
  {
    name: "Prešovský",
    color: "#6f9c76",
    href: "/hikes/presovsky-kraj",
    description: "Túry pre Prešovský kraj",
  },
  {
    name: "Žilinský",
    color: "#57cc99",
    href: "/hikes/zilinsky-kraj",
    description: "Túry pre Žilinský kraj",
  },
  {
    name: "Nitriansky",
    color: "#b5ead7",
    href: "/hikes/nitriansky-kraj",
    description: "Túry pre Nitriansky kraj",
  },
  {
    name: "Banskobystrický",
    color: "#e5989b",
    href: "/hikes/banskobystricky-kraj",
    description: "Túry pre Banskobystrický kraj",
  },
  {
    name: "Trnavský",
    color: "#f7b267",
    href: "/hikes/trnavsky-kraj",
    description: "Túry pre Trnavský kraj",
  },
];

const navItems = [
  {
    name: "Domov",
    href: "/",
    hasDropdown: false,
  },
  {
    name: "Blog",
    href: "/blog",
    hasDropdown: false,
  },
  {
    name: "Túry",
    href: "/hikes",
    hasDropdown: true,
    dropdownItems: regions,
  },
  {
    name: "Turistická mapa",
    href: "/map",
    hasDropdown: false,
  },
  {
    name: "Akcie",
    href: "/akcie",
    hasDropdown: false,
  },
  {
    name: "Tipy a triky",
    href: "/tipy-a-triky",
    hasDropdown: false,
  },
  {
    name: "O nás",
    href: "/about",
    hasDropdown: false,
  },
];
---

<header>
  <nav>
    <a class="logo-container" href="/">
      <Icon class="logo" name="logoSite" size={50} />
      <h2>beznahory.sk</h2>
    </a>
    <div>
      <ul class="main-ul">
        {
          navItems.map((item) => (
            <li class="nav-item">
              {item.hasDropdown ? (
                <>
                  <button
                    class="dropdown-button main-link"
                    aria-expanded="false"
                  >
                    <span class="dropdown-link">{item.name}</span>
                    <Icon class="arrow-dropdown" name="arrow-down" size={20} />
                  </button>

                  <ul class="nav-dropdown-content">
                    {item.dropdownItems?.map((region) => (
                      <li class="dropdown-item-container">
                        <a href={region.href} class="dropdown-item-link">
                          <div
                            style={{ backgroundColor: region.color }}
                            class="region-bar"
                          />
                          <div>
                            <span class="region-name">{region.name}</span>
                            <span class="region-description">
                              {region.description}
                            </span>
                          </div>
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a class="main-link" href={item.href}>
                  {item.name}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </div>
    <Icon class="hamburger" name="hamburger" size={30} />
  </nav>
</header>
<style>
  a {
    text-decoration: none;
    color: var(--text-primary);
  }
  header {
    position: sticky;
    top: 0;
    z-index: 10000;
    background: var(--bg-primary);
    border-block-end: 1px solid var(--border-color);
  }
  nav {
    max-width: 1500px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 8px;
    color: var(--text-primary);
  }
  .logo {
    fill: var(--text-primary);
  }
  .logo-container {
    display: flex;
    align-items: center;
  }
  .hamburger {
    display: none;
    fill: var(--text-primary);
  }
  h2 {
    font-size: 1.5rem;
  }
  .main-ul {
    display: flex;
    list-style: none;
    gap: 15px;
    font-size: 1.1rem;
  }
  .region-bar {
    width: 4px;
    height: 35px;
  }
  .dropdown-button {
    background: none;
    border: none;
    font-size: inherit;
    font-family: inherit;
    color: inherit;
    cursor: pointer;
    width: 100%;
    text-align: left;
  }
  .main-link {
    padding-inline: 8px;
    padding-block: 12px;
    border-radius: 5px;
    display: flex;
    align-items: center;
    gap: 5px;
    position: relative;
  }
  nav .main-link:hover {
    background: var(--hover-bg);
    color: var(--hover-text);
  }
  .dropdown-item-container:hover {
    background: var(--hover-bg-secondary);
  }
  .dropdown-item-container {
    margin: 7px;
    border-radius: 5px;
  }
  .region-name {
    font-weight: 500;
    display: block;
  }
  .region-description {
    font-size: 0.8rem;
    color: var(--description-text);
    display: block;
  }
  .dropdown-link {
    color: inherit;
  }
  .nav-dropdown-content {
    display: none;
    list-style: none;
    position: absolute;
    background-color: var(--bg-primary);
    min-width: 250px;
    box-shadow: 0px 0px 10px rgba(177, 177, 177, 0.2);
    z-index: 1;
    top: 100%;
    left: 8px; /* Zarovnanie s vnútorným obsahom tlačidla (zodpovedá padding-inline tlačidla) */
    border-radius: 10px;
    border: 1px solid var(--border-color);
  }
  .arrow-dropdown {
    transition: transform 0.3s ease;
    fill: var(--text-primary);
  }
  .nav-item:hover .arrow-dropdown {
    fill: var(--hover-text);
  }
  .main-ul a {
    color: var(--text-primary);
    text-decoration: none;
  }
  .dropdown-item-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    text-decoration: none;
    color: var(--text-primary);
    border-radius: 8px;
    margin: 2px;
  }
  .nav-item {
    border-radius: 5px;
    position: relative;
  }
  .nav-item-active {
    background: var(--hover-bg);
  }
  .dropdown-active .arrow-dropdown {
    transform: rotate(180deg);
  }
  @media (max-width: 900px) {
    nav {
      padding-inline: 20px;
    }
    .hamburger {
      display: block;
      cursor: pointer;
      transition: transform 0.3s ease;
    }
    .main-ul {
      position: fixed;
      left: -100%;
      top: 67px;
      flex-direction: column;
      align-items: start;
      gap: 0;
      background: white;
      width: 100%;
      height: 100%;
      transition: left 0.3s;
      text-align: center;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }
    .nav-item {
      width: 100%;
      border-block-end: 1px solid var(--border-color);
      border-radius: 0;
      position: relative;
    }
    .main-link {
      display: flex;
      justify-content: space-between;
      padding: 30px;
    }
    .main-link::after {
      display: none;
    }
    nav .main-link:hover {
      background: transparent;
    }
    .main-ul.active {
      left: 0;
    }
    .hamburger.active {
      transform: rotate(90deg);
    }
    .nav-item:hover {
      background: var(--hover-bg);
    }
    .nav-dropdown-content {
      position: static;
      width: 100%;
      border-radius: 0;
      box-shadow: none;
      border: none;
      margin-top: 5px;
    }
    .region-bar {
      display: none;
    }
    .region-description {
      display: none;
    }
    .dropdown-item-container {
      border-block-end: 1px solid var(--border-color);
      border-radius: 0;
      margin: 0;
      background: #fff7e0;
    }
    .dropdown-item-link {
      padding: 30px;
      margin: 0;
    }
    .region-name {
      font-weight: 400;
    }
  }
</style>
<script>
  // Select all nav items
  const navItems = document.querySelectorAll(".nav-item");
  const hamburger = document.querySelector(".hamburger");
  const navMenu = document.querySelector(".main-ul");

  // Hamburger mobile menu
  hamburger?.addEventListener("click", () => {
    hamburger.classList.toggle("active");
    navMenu?.classList.toggle("active");
  });

  // Funkcia na zatvorenie všetkých dropdownov
  const closeAllDropdowns = () => {
    document.querySelectorAll(".nav-dropdown-content").forEach((dropdown) => {
      if (dropdown instanceof HTMLElement) {
        dropdown.style.display = ""; // Reset na CSS default (none)
      }

      // Nájdi rodiča (nav-item) a odstráň mu active triedu, ale iba ak nie je aktívny kvôli URL
      const parentNavItem = dropdown.closest(".nav-item");
      if (parentNavItem) {
        // Vždy odstráň dropdown-active (šípka ide dole)
        parentNavItem.classList.remove("dropdown-active");
        
        // Nastav aria-expanded na false
        const button = parentNavItem.querySelector(".dropdown-button");
        if (button) {
          button.setAttribute("aria-expanded", "false");
        }

        // Odstráň nav-item-active, ale iba ak nie je aktívny kvôli URL
        if (!parentNavItem.hasAttribute("data-url-active")) {
          parentNavItem.classList.remove("nav-item-active");
        }
      }
    });
  };

  // Najprv označíme, ktoré položky sú aktívne kvôli URL
  document.querySelectorAll(".nav-item.nav-item-active").forEach((item) => {
    item.setAttribute("data-url-active", "true");
  });

  // Pridaj click event len na nav items s dropdownom
  navItems.forEach((item) => {
    // Skontroluj, či item má dropdown trigger
    const dropdownTrigger = item.querySelector(".dropdown-button");
    if (!dropdownTrigger) return; // Preskoč items bez dropdownu

    // Pridaj click listener na dropdown trigger
    dropdownTrigger.addEventListener("click", (event) => {
      event.preventDefault(); // Zabráň navigácii

      // Nájdi dropdown content
      const dropdown = item.querySelector(".nav-dropdown-content");
      if (!dropdown || !(dropdown instanceof HTMLElement)) return;

      // Toggle dropdown a nav-item-active triedu
      if (dropdown.style.display === "block") {
        dropdown.style.display = ""; // Zatvor dropdown
        
        // Nastav aria-expanded
        dropdownTrigger.setAttribute("aria-expanded", "false");

        // Odstráň dropdown-active triedu (šípka ide dole)
        item.classList.remove("dropdown-active");

        // Odstráň active triedu, ale iba ak nie je aktívny kvôli URL
        if (!item.hasAttribute("data-url-active")) {
          item.classList.remove("nav-item-active");
        }
      } else {
        // Zatvor všetky ostatné dropdowny
        closeAllDropdowns();

        // Otvor tento dropdown
        dropdown.style.display = "block";
        
        // Nastav aria-expanded
        dropdownTrigger.setAttribute("aria-expanded", "true");

        // Pridaj dropdown-active triedu (šípka ide hore)
        item.classList.add("dropdown-active");

        // Pridaj active triedu
        item.classList.add("nav-item-active");
      }

      // Zabráň event bubblingu, aby sa event nedostal na document
      event.stopPropagation();
    });

    // Zabráň klikom vnútri dropdownu, aby ho zatvorili
    const dropdownContent = item.querySelector(".nav-dropdown-content");
    if (dropdownContent) {
      dropdownContent.addEventListener("click", (event) => {
        // Zastav event propagation, ale nechaj defaultnú akciu (klik na link)
        event.stopPropagation();
      });
    }
  });

  // Zatvor dropdown pri kliknutí kamkoľvek inde na stránke
  document.addEventListener("click", () => {
    closeAllDropdowns();
  });

  // Zatvor dropdown pri stlačení klávesy ESC
  document.addEventListener("keydown", (event) => {
    if (event.key === "Escape") {
      closeAllDropdowns();
    }
  });
</script>